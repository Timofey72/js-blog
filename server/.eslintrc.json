{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "semi": "off",
    "require-jsdoc": "off",
    "linebreak-style": 0,
    "react/prop-types": "off",
    "prettier/prettier": ["warn", { "endOfLine": "auto", "useTabs": false, "printWidth": 100 }]
  }
}
