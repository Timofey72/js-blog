{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "semi": "off",
    "require-jsdoc": "off",
    "linebreak-style": 0,
    "react/prop-types": "off",
    "prettier/prettier": ["warn", { "endOfLine": "auto", "useTabs": false, "printWidth": 100 }],
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-unescaped-entities": 0
  }
}
